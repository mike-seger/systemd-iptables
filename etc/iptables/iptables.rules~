*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT DROP [0:0]

# loopback
-A INPUT -i lo -j ACCEPT
-A OUTPUT -o lo -j ACCEPT
-A INPUT -d 127.0.0.1 -j ACCEPT
-A OUTPUT -s 127.0.0.1 -j ACCEPT

# ACCEPT already ESTABLISHED connections
-A INPUT -p ALL -i enp1s0 -m state --state ESTABLISHED,RELATED -j ACCEPT

# ACCEPT all OUTPUT
-A OUTPUT -p ALL -o enp1s0 -j ACCEPT

# SSH
-A INPUT -p tcp --dport 22 -m state --state NEW -j ACCEPT

# FORWARD
-A FORWARD -o enp1s0 -s 192.168.0.0/24 -m conntrack --ctstate NEW -j ACCEPT
-A FORWARD -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

COMMIT

*nat
:PREROUTING ACCEPT [16:1336]
:INPUT ACCEPT [14:840]
:OUTPUT ACCEPT [30:2116]
:POSTROUTING ACCEPT [0:0]
-A POSTROUTING -o enp1s0 -j MASQUERADE

COMMIT
